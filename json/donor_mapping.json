                    },
                    "hipsciFullName": {
                        "type": "string",
                        "index": "analyzed",
                        "analyzer": "hipsci_long_name"
                    },
                    "prefixes": {
                        "type": "string",
                        "index": "analyzed",
                        "analyzer": "prefix_only",
                        "search_analyzer": "max_length"
                    }
                }
            },
            "age": {
                "type": "string",
                "index": "not_analyzed",
