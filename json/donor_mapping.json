            },
            "ethnicity": {
                "type": "string",
                "index": "analyzed",
                "copy_to": "searchable.prefixes"
            },
            "name": {
                "type": "string",
                "index": "not_analyzed",
                "copy_to": ["searchable.hipsciShortName", "searchable.hipsciFullName"]
            },
            "sex": {
                "type": "string",
                "index": "not_analyzed",
                "copy_to": "searchable._other"
            },
            "tissueProvider": {
                "type": "string",
                "index": "not_analyzed",
                "copy_to": "searchable.prefixes"
            }
        }
    }
}
