{
    "index": {
        "analysis": {
            "analyzer": {
                "fixed_text": {
                    "type": "custom",
                    "tokenizer": "whitespace",
                    "filter": ["lowercase"]
                },
                "prefixes": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": ["lowercase", "prefixes_filter"]
                }
            },
            "filter": {
              "prefixes_filter": {
                "type": "edge_ngram",
                "min_gram": 4,
                "max_gram": 20
              }
            }
        }
    }
}
